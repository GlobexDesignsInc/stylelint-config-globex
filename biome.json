{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useCollapsedElseIf": "error",
				"useShorthandAssign": "error"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "error",
				"noConsoleLog": "error",
				"noMisrefactoredShorthandAssign": "error"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
