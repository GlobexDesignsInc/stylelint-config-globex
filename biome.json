{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"css": {
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false,
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noBarrelFile": "warn"
			},
			"style": {
				"noNamespaceImport": "error",
				"useCollapsedElseIf": "error",
				"useShorthandAssign": "error"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "error",
				"noConsoleLog": "error",
				"noMisrefactoredShorthandAssign": "error"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
